<h1>
Movies
</h1>



<% @list_of_movies.each do |movie| %>
<div class="container">
    <div class="row">
        <div class="col-sm-3">
        <h2><%= movie.title %></div>
        </h2>
        </div>
    </div>
    <div class="row">
        <ul><div class="col-sm-3"><img src="<%= movie.image_url %>" width="80"></ul>
        <ul><div class="col-sm-3">Year: <%= movie.year %></div>
    </div></ul>

    <div class="row">
        <ul><div class="col-sm-12"><%= movie.description %></div></ul>
    </div>
</div>


<% end %>

